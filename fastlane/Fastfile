default_platform(:ios)

platform :ios do
  desc "Run swift code validation using SwiftLint"
  lane :lint do
    swiftlint
  end

  desc "Run tests"
  lane :test do
    scan(
      scheme: "Waterlove",
      skip_build: true,
      cloned_source_packages_path: "SourcePackages"
    )
  end

  desc "Build the project"
  lane :build do
    gym(
      scheme: "Waterlove",
      destination: 'generic/platform=iOS Simulator',
      cloned_source_packages_path: "SourcePackages",
      clean: true
    )
  end
end